<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row" data-bind="with:categoryListViewModel">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset custom-mg-pd-layout">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h1> Categories</h1>
                            <div class="sparkline13-outline-icon">
                                <button data-toggle="modal" class="important-btn" data-bind="click : InsertCategory"><i class="fa big-icon fa-plus"></i> New Category</button>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div>
                          
                            <table id="table" class="table border-table txt-align-c" border="1">
                                <thead>
                                    <tr>

                                        <th class="txt-align-c">Name</th>
                                        <th class="txt-align-c">Description</th>
                                        <th class="txt-align-c">Status</th>
                                        <th class="txt-align-c">Modified On</th>

                                        <th class="txt-align-c">Action</th>
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach: categories">
                                    <tr>
                                        <td data-bind="text: Name"></td>
                                        <td data-bind="text: Description"></td>
                                        <td data-bind="html: CommonGlobal.displayStatusInfo(IsActive)"></td>
                                        <td data-bind="text: CommonGlobal.convertDateJSToClientDateTime(ModifiedOn,'DD-MMM-YYYY')"></td>

                                        <td class="datatable-ct txt-align-c">
                                            <a href="" data-bind="click: $parent.ViewCategory.bind($parent, $data.Id)" class="standard-btn"><i class="fa big-icon fa-pencil "></i></a>
                                        </td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
