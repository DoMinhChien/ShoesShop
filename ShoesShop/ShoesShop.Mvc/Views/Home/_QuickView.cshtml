
<div class="wrap-modal1 js-modal1 p-t-60 p-b-20" id="quickview" style="overflow:hidden">
    <div class="overlay-modal1 js-hide-modal1"></div>

    <div class="container" data-bind="with : currentViewModel">
        <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
            <button class="how-pos3 hov3 trans-04 js-hide-modal1" data-bind="click: closeDialog">
                <img src="~/Content/User/images/icons/icon-close.png" alt="CLOSE">
            </button>

            <div class="row">
                <div class="col-md-6 col-lg-7 p-b-30">
                    <div class="p-l-25 p-r-30 p-lr-0-lg">
                        <div class="wrap-slick3 flex-sb flex-w">
                            <div class="wrap-slick3-dots"></div>
                            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                            <div class="slick3 gallery-lb">
                                <div class="item-slick3" data-thumb="/Content/User/images/product-detail-01.jpg">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="~/Content/User/images/product-detail-01.jpg" alt="IMG-PRODUCT">

                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/Content/User/images/product-detail-01.jpg">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="item-slick3" data-thumb="/Content/User/images/product-detail-02.jpg">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="~/Content/User/images/product-detail-02.jpg" alt="IMG-PRODUCT">

                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/Content/User/images/product-detail-02.jpg">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="item-slick3" data-thumb="/Content/User/images/product-detail-03.jpg">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="~/Content/User/images/product-detail-03.jpg" alt="IMG-PRODUCT">
                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/Content/User/images/product-detail-03.jpg">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-5 p-b-30">
                    <div class="p-r-50 p-t-5 p-lr-0-lg">
                        <h4 class="mtext-105 cl2 js-name-detail p-b-14" data-bind="text: Name()"></h4>

                        <span class="mtext-106 cl2" data-bind="currency : UnitPrice()"></span>

                        <p class="stext-102 cl3 p-t-23">
                            Nulla eget sem vitae eros pharetra viverra. Nam vitae luctus ligula. Mauris consequat ornare feugiat.
                        </p>
                        <div class="row">
                            <div class="col-sm-2 col-md-2 col-lg-2">
                                <span>Views :</span>
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3" style="padding-left:0px;   ">
                                <span class="mtext-106 col-12" data-bind="text: ViewCounts()"></span>
                            </div>
                        </div>

                        <!--  -->
                        <div class="p-t-33">
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Size
                                </div>
                                <div class="size-204 respon6-next">
                                    @*<select id="dropdownSupplier" class="w-80" data-bind="value:sizeId, valueAllowUnset: true, options: listSize, optionsText: 'Name', optionsValue: 'Id', select2: { placeholder: 'Select an Size...', allowClear: false }"></select>*@
                                    <select class="dropdownSize form-control">
                                        <option>Select</option>
                                        <option value="Bahamas">S</option>
                                        <option value="Bahrain">M</option>
                                        <option value="Bangladesh">L</option>
                                        <option value="Barbados">XL</option>
                                        <option value="Belarus">XXL</option>
                                    </select>
                                </div>
                            </div>


                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <a href="#" data-bind="click: decrease.bind()"><i class="fs-16 zmdi zmdi-minus"></i></a>
                                        </div>

                                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" data-bind="value: selectedQuantiy()" disabled>

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <a href="#" data-bind="click: increase.bind()"><i class="fs-16 zmdi zmdi-plus"></i></a>
                                        </div>
                                    </div>

                                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                        Add to cart
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!--  -->
                        <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                            <div class="flex-m bor9 p-r-10 m-r-11">
                                <a href="~/Content/User/#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Add to Wishlist">
                                    <i class="zmdi zmdi-favorite"></i>
                                </a>
                            </div>

                            <a href="~/Content/User/#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                                <i class="fa fa-facebook"></i>
                            </a>

                            <a href="~/Content/User/#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                                <i class="fa fa-twitter"></i>
                            </a>

                            <a href="~/Content/User/#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                                <i class="fa fa-google-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
