<template id="switch-component">
    <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="statusSwitch" data-bind="checked: IsActive">
        <label class="onoffswitch-label" for="statusSwitch">
            <span class="onoffswitch-inner"></span>
            <span class="onoffswitch-switch"></span>
        </label>
    </div>
</template>